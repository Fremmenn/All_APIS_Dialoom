    "@nestjs/passport": "^9.0.0",
    "@nestjs/jwt": "^9.0.0",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "bcrypt": "^5.0.1",
    "stripe": "^11.0.0",
    "firebase-admin": "^11.0.0",
    "agora-access-token": "^2.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.0",
    "typeorm": "^0.3.12",
    "pg": "^8.7.0"
